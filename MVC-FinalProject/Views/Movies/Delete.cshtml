@{
}

<h1>Do you really want to Delete this Movie</h1>
<table class="table table-bordered border-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                 <th scope="col">Image</th>
              
            </tr>
        </thead>
        <tbody>
                      
                           <tr>
                             <th scope="row">@Model.Id</th>
                            <td>@Model.Name</td>
                            <td>@Model.Description</td>
                            <td>@Model.ImageUrl</td>
                            
                        </tr>
                        
           
        </tbody>
    </table>

<form asp-action = "DeleteMovie">
    <input type="hidden" value="@Model.Id" name="id"/><br>
    

    <input class="btn btn-danger btn-lg mx-3 my-3" type="submit" value="Delete"/>
</form>